<div class="container">
  <div class="main-content" style="display: flex; align-items: center; justify-content: center; min-height: calc(100vh - 80px);">
    <div class="card" style="max-width: 450px; width: 100%;">
      <div class="card-header" style="text-align: center;">
        <h2 style="margin: 0; font-size: 1.75rem;">ðŸ”‘ Log in to TaskPulse</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group" style="display: flex; align-items: center; gap: 0.5rem;">
              <%= f.check_box :remember_me, style: "width: auto; margin: 0;" %>
              <%= f.label :remember_me, style: "margin: 0; font-weight: normal;" %>
            </div>
          <% end %>

          <div style="margin-top: 1.5rem;">
            <%= f.submit "Log in", class: "btn btn-primary", style: "width: 100%;" %>
          </div>
        <% end %>
      </div>
      <div class="card-footer" style="text-align: center;">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
