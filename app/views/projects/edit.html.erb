<div class="container">
  <div class="main-content">
    <div class="page-header">
      <h1 class="page-title">✏️ Edit Project</h1>
      <%= link_to "← Back to Team", team_path(@team), class: "btn btn-secondary" %>
    </div>

    <div class="card" style="max-width: 600px;">
      <div class="card-body">
        <%= form_with model: [@team, @project] do |f| %>
          <div class="form-group">
            <%= f.label :name, "Project Name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter project name" %>
          </div>

          <div style="display: flex; gap: 0.75rem;">
            <%= f.submit "Update Project", class: "btn btn-primary" %>
            <%= link_to "Cancel", team_path(@team), class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
