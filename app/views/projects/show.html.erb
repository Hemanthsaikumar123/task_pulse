<h1><%= @project.name %></h1>

<%= link_to "âž• Add Task", new_team_project_task_path(@project.team, @project) %>

<p>Health: <%= @project.health_score %>%</p>


<h2>Tasks</h2>

<% @tasks.each do |task| %>
  <div style="border:1px solid #ddd; padding:10px; margin-bottom:10px;">
    <strong><%= task.title %></strong>
    <p>Status: <%= task.status %></p>
    <p>Priority: <%= task.priority %></p>
    <p>Due: <%= task.due_date %></p>

    <%= form_with model: [@project.team, @project, task], method: :patch do |f| %>
      <%= f.select :status, %w[todo in_progress done] %>
      <%= f.submit "Update Status" %>
    <% end %>

    <hr>

    <h4>Comments</h4>
    <% task.comments.each do |comment| %>
      <p><strong><%= comment.user.name %>:</strong> <%= comment.content %></p>
    <% end %>

    <%= form_with model: [@project.team, @project, task, Comment.new] do |f| %>
      <%= f.text_field :content, placeholder: "Add a comment..." %>
      <%= f.submit "Post" %>
    <% end %>
  </div>
<% end %>



