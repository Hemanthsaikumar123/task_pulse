<div class="container">
  <div class="main-content">
    <div class="page-header">
      <h1 class="page-title">✏️ Edit Task</h1>
      <%= link_to "← Back to Project", team_project_path(@project.team, @project), class: "btn btn-secondary" %>
    </div>

    <div class="card" style="max-width: 800px;">
      <div class="card-body">
        <%= form_with model: [@project.team, @project, @task] do |f| %>
          <div class="form-group">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control", placeholder: "Enter task title" %>
          </div>

          <div class="form-group">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, class: "form-control", placeholder: "Enter task description", rows: 5 %>
          </div>

          <div class="grid grid-cols-2" style="margin-bottom: 1.5rem;">
            <div class="form-group">
              <%= f.label :assignee, "Assign To", class: "form-label" %>
              <%= f.select :assignee_id, @users.map { |u| [u.name, u.id] }, { include_blank: "Select team member" }, { class: "form-control" } %>
            </div>

            <div class="form-group">
              <%= f.label :status, class: "form-label" %>
              <%= f.select :status, [['To Do', 'todo'], ['In Progress', 'in_progress'], ['Done', 'done']], {}, { class: "form-control" } %>
            </div>
          </div>

          <div class="grid grid-cols-2" style="margin-bottom: 1.5rem;">
            <div class="form-group">
              <%= f.label :priority, class: "form-label" %>
              <%= f.select :priority, [['Low', 'low'], ['Medium', 'medium'], ['High', 'high']], {}, { class: "form-control" } %>
            </div>

            <div class="form-group">
              <%= f.label :due_date, class: "form-label" %>
              <%= f.date_field :due_date, class: "form-control" %>
            </div>
          </div>

          <div style="display: flex; gap: 0.75rem;">
            <%= f.submit "Update Task", class: "btn btn-primary" %>
            <%= link_to "Cancel", team_project_path(@project.team, @project), class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
