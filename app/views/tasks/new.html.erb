<h1>New Task</h1>

<%= form_with model: [@project.team, @project, @task] do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :assignee %><br>
    <%= f.select :assignee_id, @users.map { |u| [u.name, u.id] } %>
  </div>

  <div>
    <%= f.label :status %><br>
    <%= f.select :status, %w[todo in_progress done] %>
  </div>

  <div>
    <%= f.label :priority %><br>
    <%= f.select :priority, %w[low medium high] %>
  </div>

  <div>
    <%= f.label :due_date %><br>
    <%= f.date_field :due_date %>
  </div>

  <%= f.submit "Create Task" %>
<% end %>
